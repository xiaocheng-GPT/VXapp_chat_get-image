.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f1f1f1;
  background-image: url('http://img.netbian.com/file/2024/1111/small083049ub0ei1731285049.jpg');  /* 设置背景图片路径 */
  background-size: cover;  /* 背景图片覆盖整个容器 */
  background-position: center;  /* 背景居中 */
  background-attachment: fixed;  /* 滚动时背景不动 */
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll; /* 确保滚动效果 */
  z-index: 1;  /* 确保聊天内容在背景上 */
}

.message {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.message-user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-break: break-all;
}

.message-user .content {
  background-color: #95EC69;
}

.message-ai .content {
  background-color: #ffffff;
}

.content image {
  max-width: 100%;
  border-radius: 8rpx;
}

.input-container {
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.9); /* 输入框区域背景透明 */
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  z-index: 2;  /* 确保输入区域位于背景上 */
}

.toolbar {
  margin-right: 20rpx;
}

.image-upload {
  width: 60rpx;
  height: 60rpx;
}

.image-upload image {
  width: 100%;
  height: 100%;
}

.message-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 35rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-button {
  margin-left: 20rpx;
  background-color: #07C160;
  color: white;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  transition: all 0.3s ease; /* 动画效果 */
}

.send-button:hover {
  background-color: #06a24b; /* hover时颜色稍深 */
  transform: scale(1.05); /* 按钮放大 */
}

.clear-chat-button {
  padding: 10rpx;
  text-align: center;
  z-index: 3;  /* 确保清除按钮位于背景上 */
}

.clear-button {
  background-color: #FF4C4C;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 20rpx;
}
